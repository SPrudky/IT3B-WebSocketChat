        <Button Content="Odeslat" HorizontalAlignment="Left" Margin="285,283,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.051,-0.593" Height="35" Width="100" FontSize="18"/>
        <Button Content="Připojit" HorizontalAlignment="Left" Margin="629,283,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.17,0.575" Height="35" Width="65"/>
        <Button Content="Odpojit" HorizontalAlignment="Left" Margin="699,283,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.17,0.575" Height="35" Width="65"/>
        <TextBox HorizontalAlignment="Left" Margin="419,283,0,0" TextWrapping="Wrap" Text="IP adresa" VerticalAlignment="Top" Width="205" Height="35" FontSize="20"/>
        <TextBox HorizontalAlignment="Left" Margin="10,283,0,0" TextWrapping="Wrap" Text="Zadej zprávu" VerticalAlignment="Top" Width="270" Height="35" FontSize="20"/>


    </Grid>
</Window>

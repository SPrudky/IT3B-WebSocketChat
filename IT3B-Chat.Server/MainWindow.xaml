        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Height="255" Width="780" Background="AntiqueWhite" Text="Zprávy zde" FontSize="18" Margin="0,10,0,0" RenderTransformOrigin="0.411,0.486"/>
